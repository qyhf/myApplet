page{
  height:100%;
}
.wrapper{
  width:100%;
  display:flex;
  min-height:100%;
}
.scroll_left{
  width:30%;
}
.left{
  width:100%;
  min-height:100%;
  background-color:#e3599e;
  color:#fff;
  text-align: center;
  font-size:14px;
}
.con{
  background-color:#c22172;
}
.rankName{
  display:block;
  padding:20px 0;
}
.scroll_right{
  width:70%;
}
.right{
  width:100%;
  max-height:50%;
}
.cover{
  display:flex;
  padding-left:20px;
  padding-top:30px;
  padding-bottom:50px;
}
.right image{
  width:100px;
  height:100px;
}
.soar{
  color:#fff;
  line-height:100px;
  padding-left:10px;
}
.content{
  width:100%;
  height:100%;
  background-color:#fff;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
 
  padding-top:30px;
}
.content .containt{
   display:flex;
   margin-bottom:5px;
}
.num{
  width:20%;
  height:40px;
  font-size:12px;
  color:#666;
  text-align: center;
   line-height: 40px;
}
.song{
  width:60%;
  height:40px;
 
}
.icon{
  width:20%;
  height:40px;
  position:relative;
}
.icon image{
  width:20px;
  height:20px;
  position:absolute;
  top:10px;
  left:0px;
}
.name{
  font-size:14px;

}
.singer{
  display:block;
  font-size:10px;
  color:#999;
}
.hide{
  display:none;
}
.show{
  display:block;
}
.active{
  color:#d4237a;
}
.act{
  color:#ef96c2;
}