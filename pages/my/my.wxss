.header{
  height:200px;
  overflow: hidden;
  position: relative;
}
.portrait{
  width:100%;
  filter: blur(5px);
}
.mask{
  width:100%;
  height:200px;
  background-color:#fff;
  position:absolute;
  top:0;
  left:0;
  opacity: .5;
}
.name{

  width:100%;
  position:absolute;
  text-align: center;
  left:0px;
  top:120px;
}

.btn{
  width:100%;
  height:46px;
  position:absolute;
  top:150px;
  left:0;
}
button{
  width:100px;
  /* position:absolute;
